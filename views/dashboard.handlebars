  {{#if blogPosts.length}}
  <div class="col-md-6 project-list">
    <h3>Current Projects:</h3>

    {{#each blogPosts as |blogPost|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/blogPosts/{{blogPost.id}}">{{blogPost.title}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{blogPost.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}